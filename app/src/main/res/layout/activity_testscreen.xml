<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#BDBDBD"
    android:layout_height="match_parent"
    tools:context=".testscreen">
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New user test"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"

        android:layout_centerHorizontal="true"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:layout_marginTop="30dp"
        android:text="Every new user should take this test. this test will only take few minutes"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="9dp"
        android:paddingLeft="20dp"
        android:text="1 for definatley agree  \n2 for slightly agree \n3 for slightly disagree\n4 for definately disagree."
        android:textSize="16sp" />

    <EditText
        android:id="@+id/ans1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="39dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_border"
        android:drawableLeft="@drawable/ic_account_circle"
        android:drawablePadding="15dp"
        android:hint="Enter Option"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ans1"
        android:layout_marginTop="7dp"
        android:text="Q2: I prefer to do things on my own, rather than with others."
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/ans2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textView12"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittext_border"
        android:drawableLeft="@drawable/ic_account_circle"
        android:drawablePadding="15dp"
        android:hint="Enter Answer"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/login_border"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:text="next"
         />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="36dp"
        android:text="Q1: I find social situations easy"
        android:textSize="50sp"
        app:autoSizeTextType="uniform" />


</RelativeLayout>